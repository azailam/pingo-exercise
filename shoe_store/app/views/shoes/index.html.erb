<h1>Listing shoes</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Color</th>
      <th>Size</th>
      <th>Category</th>
      <th>Company</th>
      <th>Cover</th>
      <th>Count view</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @shoes.each do |shoe| %>
      <tr>
        <td><%= shoe.price %></td>
        <td><%= shoe.color %></td>
        <td><%= shoe.size %></td>
        <td><%= shoe.category_id %></td>
        <td><%= shoe.company_id %></td>
        <td><%= image_tag shoe.cover.url(:thumb) %></td>
        <td><%= shoe.count_view %></td>
        <td><%= link_to 'Show', shoe %></td>        
      </tr>
    <% end %>
  </tbody>
</table>

<%= page_entries_info @shoes, :entry_name => 'shoe'  %>
<%= will_paginate @shoes %>


<br>
<br>

<%= link_to 'New Shoe', new_shoe_path %>
