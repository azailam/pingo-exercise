<%= form_for [:admin,@shoe], :html => { :multipart => true }  do |f| %>
  <% if @shoe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shoe.errors.count, "error") %> prohibited this shoe from being saved:</h2>

      <ul>
      <% @shoe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </div>
  <div class="field">
    <%= f.label :size %><br>
    <%= f.number_field :size %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
     <%= select(:shoe, :category_id, options_from_collection_for_select(@categories, :id, :name))  %>
  </div>
  <div class="field">
    <%= f.label :company_id %><br>
    <%= select(:shoe, :company_id, options_from_collection_for_select(@companies, :id, :name))  %>
  </div>
  <div class="field">
    <%= f.label :cover %><br>
    <%= f.file_field :cover %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>