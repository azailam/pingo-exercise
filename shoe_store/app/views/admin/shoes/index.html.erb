<h1>Listing shoes</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Color</th>                
      <th>Cover</th>
      <th>Count view</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |comp| %>
    <%@shoes = @companies.find(comp.id).shoes.order("color ASC")%>
      <% @shoes.each do |shoe| %>
        <tr>
          <td><%= shoe.company.name %></td>
          <td><%= shoe.color %></td>              
          <td><%= image_tag shoe.cover.url(:thumb) %></td>
          <td><%= shoe.count_view %></td>
          <td><%= link_to 'Show', admin_shoe_path(shoe) %></td>
          <td><%= link_to 'Edit', edit_admin_shoe_path(shoe) %></td>
          <td><%= link_to 'Destroy', admin_shoe_path(shoe), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


<br>

